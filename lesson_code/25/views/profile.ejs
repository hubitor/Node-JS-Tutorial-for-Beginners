<!-- This file can be structured like a regular HTML file but may also contain embedded JS code -->

<!DOCTYPE html>
<html>

<head>
  <style>
    body {
      background: skyblue;
      font-family: verdana;
      color: #fff;
      padding: 30px;
    }
    
    h1 {
      font-size: 48px;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-align: center;
    }
    
    p {
      font-size: 16px;
      text-align: center;
    }

  </style>
</head>

<body>
  <!-- dynamically outputs the person's name received from the URL path /profile/<name> -->
  <h1>Welcome to the profile of
    <%= person %>
  </h1>
  <!-- dynamically outputs the person's age and job received from the dummy data object in app.js -->
  <p><strong>Age: </strong>
    <%= data.age %>
  </p>
  <p><strong>Job: </strong>
    <%= data.job %>
  </p>
</body>

</html>
